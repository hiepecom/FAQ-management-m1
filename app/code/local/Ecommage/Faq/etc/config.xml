<?xml version="1.0"?>
<config>
    <modules>
        <Ecommage_Faq>
            <version>0.1.0</version>
        </Ecommage_Faq>
    </modules>
    <frontend>
        <routers>
            <faq>
                <use>standard</use>
                <args>
                    <module>Ecommage_Faq</module>
                    <frontName>faq</frontName>
                </args>
            </faq>
        </routers>
        <layout>
            <updates>
                <faq>
                    <file>ecommage/faq.xml</file>
                </faq>
            </updates>
        </layout>
        <translate>
            <modules>
                <Ecommage_Faq>
                    <files>
                        <default>Ecommage_FAQ.csv</default>
                    </files>
                </Ecommage_Faq>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <faq>
                <use>admin</use>
                <args>
                    <module>Ecommage_Faq</module>
                    <frontName>faq</frontName>
                </args>
            </faq>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <faq>
                    <file>ecommage/faq.xml</file>
                </faq>
            </updates>
        </layout>
        <translate>
            <modules>
                <Ecommage_Faq>
                    <files>
                        <default>Ecommage_FAQ.csv</default>
                    </files>
                </Ecommage_Faq>
            </modules>
        </translate>
    </adminhtml>
    <global>
        <models>
            <faq>
                <class>Ecommage_Faq_Model</class>
                <resourceModel>faq_resource</resourceModel>
            </faq>
            <faq_resource>
                <class>Ecommage_Faq_Model_Resource</class>
                <entities>
                    <faq>
                        <table>faq</table>
                    </faq>
                    <faq_store>
                        <table>faq_store</table>
                    </faq_store>
                    <faqgroup>
                        <table>faq_group</table>
                    </faqgroup>
                    <faq_relationship>
                        <table>faq_relationship</table>
                    </faq_relationship>
                </entities>
            </faq_resource>
        </models>
        <resources>
            <faq_setup>
                <setup>
                    <module>Ecommage_Faq</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </faq_setup>
            <faq_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </faq_write>
            <faq_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </faq_read>
        </resources>
        <blocks>
            <faq>
                <class>Ecommage_Faq_Block</class>
            </faq>
        </blocks>
        <helpers>
            <faq>
                <class>Ecommage_Faq_Helper</class>
            </faq>
        </helpers>
    </global>
    <default>
        <faq>
            <faq>
                <enabled>1</enabled>
                <enabled_helpful>1</enabled_helpful>
            </faq>
        </faq>
        <cms>
            <wysiwyg>
                <use_static_urls_in_catalog>0</use_static_urls_in_catalog>
            </wysiwyg>
        </cms>
    </default>
</config>